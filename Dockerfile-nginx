# Use the official Nginx image
FROM nginx:alpine

# Copy the Nginx configuration
COPY ./default.conf /etc/nginx/conf.d/default.conf

# Copy application files
COPY . /var/www/blog

# Create necessary directories and set permissions for the nginx user
RUN mkdir -p /var/cache/nginx/client_temp /var/www/blog /var/run/nginx && \
    chown -R nginx:nginx /var/cache/nginx /var/www/blog /var/run/nginx && \
    chmod -R 755 /var/cache/nginx /var/www/blog /var/run/nginx

# Update Nginx config to use the custom PID directory
RUN sed -i 's|/var/run/nginx.pid|/var/run/nginx/nginx.pid|g' /etc/nginx/nginx.conf

# Switch to the Nginx user
USER nginx

# Expose port 8081 (default port for OpenShift)
EXPOSE 8081

# Set the entrypoint command
CMD ["nginx", "-g", "daemon off;"]
